<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    tools:context="com.it.acumen.slide.Main2Activity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Register"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        tools:ignore="HardcodedText"
        tools:textColor="@android:color/background_light" />

    <EditText
        android:id="@+id/r_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/r_password"
        android:layout_below="@+id/textView"
        android:layout_marginTop="19dp"
        android:background="@drawable/customedittext"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/r_email"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/r_female"
        android:layout_below="@+id/r_name"
        android:layout_marginTop="21dp"
        android:background="@drawable/customedittext"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:singleLine="false"
        android:textColorHint="#000000"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/clg"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/r_female"
        android:layout_below="@+id/r_email"
        android:layout_marginTop="19dp"
        android:background="@drawable/customedittext"
        android:ems="10"
        android:hint="collegename"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/r_password"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/clg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/customedittext"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#000000"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/r_phone"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColorHint="#000000"
        android:layout_alignLeft="@+id/r_password"
        android:layout_alignStart="@+id/r_password"
        android:layout_below="@+id/r_password"
        android:background="@drawable/customedittext"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="Mobile No"
        tools:ignore="HardcodedText"/>

    <EditText
        android:id="@+id/r_dob"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/r_phone"
        android:layout_alignRight="@+id/r_phone"
        android:layout_below="@+id/r_phone"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:textColorHint="#000000"
        android:inputType="textPersonName"
        android:background="@drawable/customedittext"
        android:hint="DOB"
        tools:ignore="HardcodedText"/>


    <TextView
        android:id="@+id/r_iam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/r_dob"
        android:layout_alignStart="@+id/r_dob"
        android:layout_below="@+id/r_dob"
        android:text="I am"
        android:layout_marginTop="18dp"
        android:background="@drawable/customedittext"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

    <RadioButton
        android:id="@+id/r_male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#000000"
        android:layout_alignBaseline="@+id/r_iam"
        android:layout_alignBottom="@+id/r_iam"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/r_iam"
        android:layout_toRightOf="@+id/r_iam"
        android:hint="Male"
        android:background="@drawable/customedittext"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:textColor="@android:color/background_dark"
        tools:ignore="HardcodedText" />

    <RadioButton
        android:id="@+id/r_female"
        android:background="@drawable/customedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/r_male"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/r_male"
        android:layout_toRightOf="@+id/r_male"
        android:textColorHint="#000000"
        android:hint="Female"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:textColor="@android:color/background_dark"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/r_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_above="@+id/textView6"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="19dp"
        android:background="@color/colorPrimary"
        android:text="Sign Up"
        android:textAllCaps="true"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="ALREADY HAVE AN ACCOUNT LOGIN!"
        android:textColor="#000000"
        android:layout_marginBottom="50dp"
        android:background="@drawable/customedittext"
        tools:ignore="HardcodedText"/>


</RelativeLayout>

